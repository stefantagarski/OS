$ cd zadaca2

$ mkdir results

$ cd results

$ nano OS1.txt

$ nano OS2.txt

$ cat OS1.txt

$ cat OS2.txt

$ cat OS1.txt OS2.txt

$ nano total.txt

$ mkdir results_2023

$ mv total.txt results_2023

$ wc total.txt

$ cat total.txt | grep "^22"

$ cat total.txt | grep "^23" | awk '{if($4 > "50.0") print $1, $2, $4}'

$ cat total.txt | grep "14.03.2024" | awk 'BEGIN {count=0} {if($3 == "in_progress") count++} END {print count}'


